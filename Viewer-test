    <script>
    // Global variable to store the current utterance object
    let currentUtterance = null;

    // --- Text-to-Speech (TTS) Implementation using browser's native API ---
    function playVoiceover(event, textToSpeak) {
        // Stop any currently speaking voiceover
        if (window.speechSynthesis.speaking) {
            window.speechSynthesis.cancel();
        }

        // Check if the browser supports the SpeechSynthesis API
        if ('speechSynthesis' in window) {
            currentUtterance = new SpeechSynthesisUtterance(textToSpeak);
            
            // You can customize the voice, rate, pitch, etc.
            // For example: currentUtterance.voice = window.speechSynthesis.getVoices()[0];
            // currentUtterance.rate = 1;
            // currentUtterance.pitch = 1;
            
            window.speechSynthesis.speak(currentUtterance);
        } else {
            console.error("Your browser does not support the Web Speech API.");
        }
    }
    
    // Make the function available globally for Pannellum's `clickHandlerFunc`
    window.playVoiceover = playVoiceover;


    // --- Keyboard Event Listener for pausing/resuming voiceover ---
    document.addEventListener('keydown', (event) => {
        // Check if the spacebar was pressed and prevent default scrolling
        if (event.code === 'Space' && window.speechSynthesis.speaking) {
            event.preventDefault();

            if (window.speechSynthesis.paused) {
                window.speechSynthesis.resume();
            } else {
                window.speechSynthesis.pause();
            }
        }
    });


    // --- Pannellum viewer setup ---
    pannellum.viewer('panorama', {
        "type": "equirectangular",
        "panorama": "Ar-img.jpg",
        "autoLoad": true,
        "autoRotate": -2,
        "compass": true,
        "hotSpots": [
            {
                "pitch": -0.6,
                "yaw": 140,
                // "type": "info", // You can still use this for tooltip
                "text": "Click here for a voiceover! (Press space to pause/resume)",
                // Hotspot now calls our custom function with text as a parameter
                "clickHandlerFunc": playVoiceover,
                "clickHandlerArgs": "Welcome to this beautiful virtual tour of Jaipur. This city is also known as the Pink City of India. The architecture is beautiful and the city is a delight to watch. "
            }
        ]
    });

    // --- JavaScript for Hamburger Menu ---
    const hamburgerBtn = document.getElementById('hamburger-btn');
    const sideNav = document.getElementById('side-nav');

    hamburgerBtn.addEventListener('click', () => {
        hamburgerBtn.classList.toggle('active');
        sideNav.classList.toggle('show');
    });
    </script>
